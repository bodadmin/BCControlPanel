<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<service xmlns="http://www.activegrid.com/namespaces/ServiceDefinitions/1.0" id="SettingsService" class="com.bccontrolpanel.settingsservice.SettingsService" type="JavaService" springFile="SettingsService.spring.xml">
    <operation name="countFiles">
        <parameter name="relativePath" typeRef="java.lang.String" isList="false"/>
        <return typeRef="int" isList="false"/>
    </operation>
    <operation name="listFiles">
        <parameter name="relativePath" typeRef="java.lang.String" isList="false"/>
        <return typeRef="java.lang.String" isList="true"/>
    </operation>
    <operation name="openFile">
        <parameter name="filename" typeRef="java.lang.String" isList="false"/>
        <return typeRef="java.lang.Object" isList="true"/>
    </operation>
    <operation name="writeToFile">
        <parameter name="filename" typeRef="java.lang.String" isList="false"/>
        <parameter name="contents" typeRef="java.lang.String" isList="false"/>
    </operation>
    <dataobjects>
        <dataobject javaType="java.lang.Object" name="Object" supportsQuickData="false"/>
    </dataobjects>
</service>
